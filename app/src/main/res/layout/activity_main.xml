<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.am.kawiarnia.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Aby dodać zamówienie wpisz numer stolika oraz wybierz pozycję z listy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent" />
<EditText
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:hint="podaj numer stolika"
    android:gravity="center"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/wybierzDanie"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:onClick="click"
        android:background="@color/colorPrimary"
        android:text="Wybierz danie "
        android:layout_height="wrap_content" />
</LinearLayout>
